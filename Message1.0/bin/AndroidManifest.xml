<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lee.message"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SEND_SMS" />
   <!--  <uses-permission android:name="android.permission.READ_SMS" /> -->

    <application
        android:allowBackup="true"
        android:configChanges="orientation|keyboardHidden|screenSize"
        android:icon="@drawable/messages"
        android:label="@string/app_name"
        android:theme="@style/SMSActionbarLightTheme" >
        <activity
            android:name="lee.activity.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="lee.activity.ContactsActivity"
            android:label="@string/title_activity_select_contacts" >
        </activity>
        <activity
            android:name="lee.activity.TemplateActivity"
            android:label="@string/title_activity_template" >
        </activity>
        <activity
            android:name="lee.activity.EditTemplateActivity"
            android:label="@string/title_activity_edit_template" >
        </activity>
        <activity
            android:name="lee.activity.AddTemplateActivity"
            android:label="@string/title_activity_add_template" >
        </activity>
        <activity
            android:name="lee.activity.PreviewActivity"
            android:label="@string/title_activity_preview" >
        </activity>
        <activity
            android:name="lee.activity.StartActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="lee.activity.MsgRecordActivity"
            android:label="@string/title_activity_msg_record" >
        </activity>
    </application>

</manifest>